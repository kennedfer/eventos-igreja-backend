{
    "compilerOptions": {
        "outDir": "dist",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noEmit": true,
        "target": "es2020",
        "moduleResolution": "node",   // << garante que "dotenv" e libs do node_modules sÃ£o resolvidas
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true, 
    },
    "include": ["src"]
}